<Window x:Class="messageSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:messageSystem"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid Background="#FFC7E9F5">
        <Label Content="Username" HorizontalAlignment="Left" Margin="68,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="68,129,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLog" Content="Login" HorizontalAlignment="Left" Margin="94,197,0,0" VerticalAlignment="Top" Width="75" Click="btnLog_Click"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="68,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="username"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="68,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  Text="password"/>
        <Label x:Name="label" Content="Euston Leisure Message System" HorizontalAlignment="Left" Margin="34,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.697,0.346" Width="234" FontSize="16"/>

    </Grid>
</Window>
